# ── Build stage ──
FROM node:22-alpine AS build
WORKDIR /app
COPY package.json ./
RUN npm install && npm cache clean --force
COPY . ./
RUN npm run build

# ── Serve stage ──
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
