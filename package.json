{
  "name": "video-editor-backend",
  "version": "2.0.0",
  "description": "Video and Image Processing Platform - 2-Service Architecture",
  "main": "api-service/server.js",
  "scripts": {
    "start": "node api-service/server.js",
    "worker": "node worker-service/worker.js",
    "dev:api": "nodemon api-service/server.js",
    "dev:worker": "nodemon worker-service/worker.js",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:api": "docker-compose logs -f api",
    "docker:logs:worker": "docker-compose logs -f worker",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v"
  },
  "author": "Ignatius Sani",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "cpeak": "^1.4.0",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "concurrently": "^8.2.2"
  }
}
